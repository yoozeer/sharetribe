     border-top-right-radius: 29.5px;
     border-bottom-right-radius: 29.5px;

     /* Rectangle 69: */
     background: #347F9D;

     /* Search: */
     font-family: ProximaNovaSoft-Medium;
     font-size: 18px;
     color: #FFFFFF;
     letter-spacing: 0px;

     /* mobile 375 */
     /* (max-width: 767px) and (orientation: portrait) */
     display: none;
   }

   /* tablet 768 */
   @media (min-width: 768px) and (max-width: 1024px), (min-width: 401px) and (max-width: 767px) and (orientation: landscape) {
     .hero__search-button {
       display: block;
     }
   }

   /* desktop 1366 */
   @media (min-width: 1025px) {

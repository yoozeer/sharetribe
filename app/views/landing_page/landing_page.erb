   /* ************************************************************************************ */
   /* Hero section                                                                         */
   /* ************************************************************************************ */
   .hero__section {
     width: 100%;
     min-height: 80vh;
     background-size: cover;
     display: flex;
     align-items: center;
     box-shadow: inset 0 0 0 40vh rgba(0, 0, 0, 0.5);
   }

   .hero__title {
     /* Your marketplace tit: */
     font-family: ProximaNovaSoft-Regular;
     color: #FFFFFF;
     text-align: center;
     margin-bottom: 30px;

     /* (max-width: 767px) and (orientation: portrait) */
     font-size: 36px;
     letter-spacing: -1.23px;
     line-height: 42px;
   }

   @media (min-width: 1025px) {
     .hero__title {
       font-size: 64px;
       letter-spacing: -1.5px;
       line-height: 76px;
     }
   }

   @media (min-width: 768px) and (max-width: 1024px), (min-width: 401px) and (max-width: 767px) and (orientation: landscape) {
     .hero__title {
       font-size: 62px;
       letter-spacing: -1.23px;
       line-height: 68px;
     }
   }

   .hero__subtitle {
     /* Paragraph. Etiam por: */
     font-family: ProximaNovaSoft-Medium;
     color: #FFFFFF;
     text-align: center;
     margin-bottom: 50px;
     letter-spacing: 0px;

     /* mobile 375 */
     /* (max-width: 767px) and (orientation: portrait) */
     /* Paragraph. Etiam por: */
     font-size: 18px;
     line-height: 24px;
   }

   /* tablet 768 */
   @media (min-width: 768px) and (max-width: 1024px), (min-width: 401px) and (max-width: 767px) and (orientation: landscape) {
     .hero__subtitle {
       font-size: 21px;
       line-height: 32px;
     }
   }

   /* desktop 1366 */
   @media (min-width: 1025px) {
     .hero__subtitle {
       font-size: 24px;
       line-height: 32px;
     }
   }

   .hero__content {
     max-width: 1366px;
     margin: 0 auto;
     padding: 16px;
     margin-top: -4.44vh; /* -50px, when content height is 900px, 80vh */
   }

   .hero__search-bar {
     display: flex;

     /* mobile 375 */
     /* (max-width: 767px) and (orientation: portrait) */
     flex-direction: row-reverse;
   }

   /* tablet 768 */
   @media (min-width: 768px) and (max-width: 1024px), (min-width: 401px) and (max-width: 767px) and (orientation: landscape) {
     .hero__search-bar {
       flex-direction: row;
     }
   }

   /* desktop 1366 */
   @media (min-width: 1025px) {
     .hero__search-bar {
       flex-direction: row;
     }
   }

   .hero__search-input {
     margin: 0;
     border: 0;
     line-height: 32px;
     padding: 0 18px;
     width: 100%;
     color: #525961;

     /* This is your search : */
     font-family: ProximaNovaSoft-Medium;
     font-size: 18px;
     letter-spacing: 0px;

     /* mobile 375 */
     /* (max-width: 767px) and (orientation: portrait) */
     border-top-left-radius: 29.5px;
     border-bottom-left-radius: 29.5px;
   }

   .hero__search-input:focus {
     outline: none;
   }

   /* tablet 768 */
   @media (min-width: 768px) and (max-width: 1024px), (min-width: 401px) and (max-width: 767px) and (orientation: landscape) {
     .hero__search-input {
       border-top-left-radius: inherit;
       border-bottom-left-radius: inherit;
     }
   }

   /* desktop 1366 */
   @media (min-width: 1025px) {
     .hero__search-input {
       border-top-left-radius: inherit;
       border-bottom-left-radius: inherit;
     }
   }

   .hero__search-button {
